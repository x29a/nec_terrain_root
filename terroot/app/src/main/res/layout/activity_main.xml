<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1" >


    <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="1.ASSETS"
            android:id="@+id/button"
            android:clickable="true"
            android:onClick="copyAssets"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="10sp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="2.BACKUP"
            android:id="@+id/button2"
            android:onClick="backup"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="10sp"  />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="3.GPT"
        android:id="@+id/button3"
        android:onClick="modGPT"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10sp"  />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="4.MODIFY"
            android:id="@+id/button4"
            android:onClick="recovery_boot"
            android:layout_below="@+id/button3"
        android:textSize="10sp" />



    <TextView
            android:layout_width="258dp"
            android:layout_height="389dp"
            android:text=""
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scrollbars = "vertical"
            android:editable="false"
            android:textIsSelectable="true"
            android:cursorVisible="false"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_row="2"
            android:layout_column="1"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_toRightOf="@+id/button4"
        android:id="@+id/space"
        android:layout_below="@+id/button5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="5.REBOOT"
        android:id="@+id/button5"
        android:onClick="reboot"
        android:layout_below="@+id/button4"
        android:textSize="10sp"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="6.SU"
        android:id="@+id/button6"
        android:onClick="su"
        android:layout_below="@+id/button5"
        android:textSize="10sp"
        android:layout_toLeftOf="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="KASreco"
        android:id="@+id/button7"
        android:onClick="kas_recovery"
        android:layout_below="@+id/button6"
        android:textSize="10sp"
        android:layout_toLeftOf="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="KASboot"
        android:id="@+id/button8"
        android:onClick="kas_boot"
        android:layout_below="@+id/button7"
        android:textSize="10sp"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
